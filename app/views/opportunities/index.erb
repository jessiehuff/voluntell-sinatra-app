<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Welcome, <%=current_user.username%></h1>
<h4><a href="/volunteers/<%=current_user.id%>">Your page</a></h4>
<br><br>
<h3>Interested in a specific cause? Search by cause here:</h3>
<form action="search", method="get">
<input type="text" name="search">
<input type="submit" id="submit" value="submit">
</form>
<br><br>
<div className="opportunities">
<h2>All opportunities:</h2>
<%@opportunities.each do |opportunity|%>
  <h3><a href="/volunteers/<%=opportunity.volunteer_id%>"><%=opportunity.volunteer.username%></a></h3>
  <h4><a href="/opportunities/<%=opportunity.id%>"><%=opportunity.event%></a> <%= opportunity.date%></h4>
  <h4><%=opportunity.description%></h4><br>
<% end %>
</div>
<br>


<h3><a href="/opportunities/new">Make a new Opportunity</a></h3>
<br>
<h3><a href="/success_stories">Check out everyone's volunteering stories!</a></h3>
<br><br>


<a href='/logout'>Log Out</a>
