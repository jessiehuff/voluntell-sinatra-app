<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h1>Opportunity: <%=@opportunity.event%></h1>
<br></br> 
<p><%=@opportunity.date%></p>
<p><%=@opportunity.time%></p>
<p><%=@opportunity.description%></p>
<p><%=@opportunity.cause%></p>
<a href="/opportunities/<%=@opportunity.id%>/edit">Edit Opportunity</a>
<br></br><br></br> 
<form action="/opportunities/<%=@opportunity.id%>/delete" method="POST">
  <input type="submit" id="submit" value="Delete Opportunity">
  <input type="hidden" name="_method" value="delete" />
</form>
<br><br>
<h4><a href="/opportunities">Back to all opportunities</a></h4>
