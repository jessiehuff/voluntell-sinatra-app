<h1><%=@volunteer.username%>'s Opportunities</h1>

<%@volunteer.opportunities.each do |opportunity|%>
  <h4><%=opportunity.volunteer.username%></h4><br>
  <p><%=opportunity.event%></p>
    <ul>
      <li><%=opportunity.date%></li>
      <li><%=opportunity.time%></li>
      <li><%=opportunity.description%></li>
    </ul>
<% end %>
<br><br>
  <%@volunteer.success_stories.each do |story|%>
    <h4><%=story.title%></h4>
    <p><%=story.content%></p>
    <% end %>
